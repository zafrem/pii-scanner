# Deep Search Labeling Frontend Dockerfile
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY deep_search_labeling/frontend/package*.json ./
RUN npm ci

# Copy frontend source
COPY deep_search_labeling/frontend/ ./

# Build the app
RUN npm run build

# Use nginx to serve
FROM nginx:alpine
COPY --from=0 /app/build /usr/share/nginx/html
COPY labeling-nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 3002
CMD ["nginx", "-g", "daemon off;"]