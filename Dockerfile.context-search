# Context Search Engine Dockerfile
FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY context_search_engine/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy source code
COPY context_search_engine/ ./

# Expose port
EXPOSE 8001

# Wait for Ollama to be ready, then start
CMD ["python", "start.py"]